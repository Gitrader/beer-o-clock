<h1 class="title">Edit Profile</h1>

<form action="/profile/{{user._id}}/edit-profile/" method="POST" enctype="multipart/form-data">

  <label for=''>Select an image :</label>
  <img src={{user.profilePicture}} alt="profile picture" style="width:20%;">
  <input type="file" name="profilePicture" value={{user.profilePicture}} />

  <label for=''>Username:</label>

  <input type='text' name='username' required value={{user.username}}>


  <label for=''>City :</label>

  <input type='text' name='city' value={{user.city}}>

  <label for=''>Country :</label>

  <input type='text' name='country' required value={{user.country}}>


  {{!-- <legend>Beer Preference</legend> --}}

  {{!-- <select id="beer-preference" name="beer-preference" required>
    <option value="lager">Lager</option>
    <option value="pilsner">Pilsner</option>
    <option value="wheat beer">Wheat beer</option>
    <option value="witbier">Witbier</option>
    <option value="IPA">IPA</option>
    <option value="porter">Porter</option>
    <option value="stout">Stout</option>
    <option value="gose">Gose</option>
    <option value="sour">Sour</option>
    <option value="no preference">No preference</option> --}}
  {{!-- </select> --}}
  {{!-- <fieldset> --}}

  <label style="margin-top:10px;" for="">Beer Preference:</label>

  <details class="prefSelect">
    <summary>Select yours</summary>
    <div>
        <label for="lager">Lager</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="lager" name="beerPreference"
          placeholder="Lager" value="lager">
    </div>
    <div>
        <label for="pilsner">Pilsner</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="pilsner" name="beerPreference" value="pilsner">
    </div>
    <div>

        <label for="wheat-beer">Wheat beer</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="wheat-beer" name="beerPreference"
          value="wheat beer">
    </div>
    <div>
        <label for="witbier">Witbier</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="witbier" name="beerPreference" value="witbier">

    </div>
    <div>
        <label for="IPA">IPA</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="IPA" name="beerPreference" value="IPA">
    </div>
    <div>
        <label for="porter">Porter</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="porter" name="beerPreference" value="porter">
    </div>
    <div>
        <label for="stout">Stout</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="stout" name="beerPreference" value="stout">
    </div>
    <div class="checkbox" >
        <label for="gose">Gose</label>
        <input type="checkbox" style="height: 1em;" id="gose" name="beerPreference" value="gose">
    </div>
    <div>
        <label for="sour">Sour</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="sour" name="beerPreference" value="sour">
    </div>
    <div>
        <label for="no-preference">No preference</label>
        <input type="checkbox" class="checkbox" style="height: 1em;" id="no-preference" name="beerPreference" value="no preference">
    </div>
  </details>

  <button type='submit'>Save</button>
</form>