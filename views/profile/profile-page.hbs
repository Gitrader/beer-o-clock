    <section class="section-added-infos">
        <article class="container-added-infos">
            <details>
                <summary>Added Beers</summary>

                <article>
                {{#each user.userBeers}}
                    <div class="beer-container">
                        {{!-- <a href="/beer-description/{{this._id}}" class="beer-link">See beer description</a> --}}
                        <a href="/profile/{{this._id}}/edit-beer">
                            <img src="{{this.image_url}}" alt="image" class="img-beers">
                            <div class="beer-attributes">
                                <p>{{this.name}}</p>

                                {{#if this.beerType}}
                                <p>Beer Type: {{this.beerType}}</p>
                                {{/if}}

                                <p>Alc. {{this.alcoholVol}} %</p>

                                {{#if this.country}}
                                <p>Origin: {{this.country}}</p>
                                {{/if }}

                                {{#if this.brewery}}
                                <p>Brewery: {{this.brewery}}</p>
                                {{/if }}
                            </div>
                        </a>
                    </div>
                {{/each}}
                </article>
            </details>
        </article>
    </section>