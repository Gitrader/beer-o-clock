<h1 class="title">My profile</h1>

<header>

    <div class="container">

        <div class="profile">

            <div class="profile-image">

                <img src="{{user.profilePicture}}" alt="profile-pic" class="img-profile">

            </div>

            <div class="profile-user-settings">

                <h1 class="profile-user-name">{{user.username}}</h1>

                <a href="edit-profile"><button class="btn profile-edit-btn">Edit Profile</button><a>

                        <a href="/auth/logout"><button class="btn profile-edit-btn">Log Out</button><a>

            </div>

            <div class="profile-stats">

                <ul>

                    <li><span class="profile-stat-count">{{user.city}}</span> </li>
                    <li><span class="profile-stat-count">{{user.country}}</span> </li>
                    <li><span class="profile-stat-count">30</span> followers</li>
                    <li><span class="profile-stat-count">22</span> following</li>

                </ul>
                <div class="profile-bio">
                    <p><span class="profile-real-name">Beer Preference</span> {{user.beerPreference}}</p>

                </div>


            </div>

        </div>
        <!-- End of profile section -->

    </div>


