<h1 class="title">ALL BEERS </h1>

{{!-- form for showing beers --}}
<details class="filter-beers">
    <summary>Filter beer selection:</summary>
    <form action="/all-beers" method="get">

        <label for="name">Name: </label>
        <input name="name" id="name" type="text">

        <label for="country">Country: </label>
        <input name="country" id="country" type="text">

        <label for="brewery">Brewery: </label>
        <input name="brewery" id="brewery" type="text">

        <label for="beerType">Beer type: </label>
        <select name="beerType" id="">
            <option value="">Don't specify</option>
            <option value="lager">Lager only</option>
            <option value="IPA">IPA only</option>
            <option value="pilsner">Pilsner only</option>
            <option value="wheat beer">Wheat beer only</option>
            <option value="witbier">Witbier only</option>
            <option value="APA">APA only</option>
            <option value="porter">Porter only</option>
            <option value="stout">Stout only</option>
            <option value="gose">Gose only</option>
            <option value="sour">Sour only</option>
            <option value="other">Beers with type "other"</option>
        </select>
        <button type="submit">Filter beers!</button>
    </form>

    <form action="/all-beers" method="get">
        <button type="submit">Show all</button>
    </form>
</details>

